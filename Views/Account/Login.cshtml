@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    Layout = "_AccountLayout";
}


@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
        <form class="cardFlat">
            <div class="mb-3">
                <input type="email" class="bars-form" id="exampleInputEmail1" placeholder="Insira seu Email" aria-describedby="emailHelp"> 
                <i class="fa-solid fa-user"></i>
            </div>
            <div class="mb-3">              
                <input type="password" class="bars-form" placeholder="Insira sua senha" id="exampleInputPassword1">
            </div>
            <div class="">
                <button type="submit" class="btn ocup">Logar</button>
            </div>
        </form>

}
